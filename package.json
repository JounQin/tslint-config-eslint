{
  "name": "tslint-config-eslint",
  "version": "0.5.2",
  "description": "Yet another TSLint Configuration which disables all rules which has been handled by `eslint` or `@typescript-eslint`.",
  "repository": "git@github.com:rx-ts/tslint-config-eslint.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "main": "base.json",
  "types": "rules.d.ts",
  "files": [
    "/rules.d.ts",
    "/rules.js",
    "base.json",
    "prettier.json",
    "sonar.json",
    "sonarjs.json"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:readme": "ts-node scripts/readme",
    "build:rules": "ts-node scripts/rules",
    "build:tsc": "tsc --declaration rules.ts",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,ts -f friendly",
    "lint:ts": "tslint -p . -t stylish",
    "lint:tsc": "tsc --noEmit",
    "release": "standard-version -a --release-as",
    "typecov": "type-coverage"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=3.0.0",
    "eslint-plugin-sonar": "^0.2.0",
    "tslint": ">=5.0.0",
    "typescript": ">=3.0.0"
  },
  "devDependencies": {
    "@1stg/common-config": "^1.3.6",
    "@1stg/tslint-config": "^1.1.0",
    "@types/node": "^14.14.34",
    "@types/prettier": "^2.2.2",
    "npm-run-all": "^4.1.5",
    "standard-version": "^9.1.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "type-coverage": "^2.16.3",
    "typescript": "^4.2.3",
    "yarn-deduplicate": "^3.1.0"
  },
  "resolutions": {
    "prettier": "^2.2.1",
    "tslib": "^2.1.0"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreFiles": [
      "*.d.ts"
    ],
    "strict": true,
    "update": true
  }
}
